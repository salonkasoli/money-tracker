<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.salonkasoli.moneytracker.ui.common.CircleChartView
        android:id="@+id/circleChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:padding="16dp"
        android:id="@+id/totalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="@id/circleChart"
        app:layout_constraintEnd_toEndOf="@id/circleChart"
        app:layout_constraintStart_toStartOf="@id/circleChart"
        app:layout_constraintTop_toTopOf="@id/circleChart" />
</androidx.constraintlayout.widget.ConstraintLayout>